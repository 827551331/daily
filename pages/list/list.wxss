/* pages/list/list.wxss */
.header{
  height: 150px;
  background-color: #E9F9E5;
}
.header .top{
  border-bottom: 3px double #000000;
  height: 100px;
  margin: 0 30px;
}
.header .top .day{
  height: 50px;
  text-align: center;
  position: relative;
}
.header .top .day .day-text{
  color: white;
  font-family: '思源黑体', sans-serif;
  font-size: x-large;
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  margin: 0;
}
.header .top .month{
  height: 50px;
  text-align: center;
  position: relative;
}
.header .top .month .month-text{
  color: white;
  font-family: '思源黑体', sans-serif;
  font-size: large;
  position: absolute;
  bottom: 15px;
  right: 0;
  left: 0;
  margin: 0;
}
.header .title{
  text-align: center;
  position: relative;
}
.header .title .title-text{
  color: white;
  font-family: 宋体, serif;
  font-size: 12px;
  position: absolute;
  bottom: 15px;
  top: 10px;
  right: 0;
  left: 0;
  margin: 0;
}
.search{
  height: 30px;
}
.list .list-item{
  /* background-color: skyblue; */
  height: 60px;
  display: flex;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-bottom: 1px solid #EAEAEA;
  align-items: center;
}
